{
    "compilerOptions": {
        "target": "ES2020",
        "allowJs": true,
        "checkJs": true,
        "strict": true,
        "outDir": "./dist",
        "moduleResolution": "NodeNext",
        "esModuleInterop": true,
        "module": "NodeNext",
        "types": ["vite/client", "./resources/types/app.d.ts"]
    },

    "include": [
        "resources/types/**/*.ts",
        "resources/types/**/*.d.ts"
    ],

    "exclude": [
        "./dist/*",
        "./public/build/**/*"
    ],
}